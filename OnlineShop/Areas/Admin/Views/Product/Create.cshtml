@model Model.EF.Product

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thêm sản phẩm
}

@section jsFooter{
    <script src="~/Assets/Admin/JS/View/Product/create.js"></script>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-10 col-md-offset-1">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin bài viết</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">

                    <div class="form-group">
                        <label>Những trường có <span class="text-danger">*</span> là bắt buộc.</label>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name) <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Code) <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MetaTitle)
                        @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description) <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @id = "product-description" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Image) <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Image, new { @class = "form-control", @id = "image-product" })
                        <a href="#" id="btn-select-image">Chọn ảnh</a>
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Images)
                        @Html.TextBoxFor(model => model.Images, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Price) <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number", @min = "0" })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PromotionPrice)
                        @Html.TextBoxFor(model => model.PromotionPrice, new { @class = "form-control", @type = "number", @min = "0" })
                        @Html.ValidationMessageFor(model => model.PromotionPrice, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IncludeVAT)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.IncludeVAT)
                                Đã bao gồm VAT
                            </label>
                            @Html.ValidationMessageFor(model => model.IncludeVAT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Quantity)
                        @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @type = "number", @min = "0" })
                        @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryID)
                        @Html.TextBoxFor(model => model.CategoryID, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Detail)
                        @Html.TextBoxFor(model => model.Detail, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Warranty)
                        @Html.TextBoxFor(model => model.Warranty, new { @class = "form-control", @type = "number", @min = "0", @max = "50" })
                        @Html.ValidationMessageFor(model => model.Warranty, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SeoTitle)
                        @Html.TextBoxFor(model => model.SeoTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MetaKeyWords)
                        @Html.TextBoxFor(model => model.MetaKeyWords, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MetaKeyWords, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MetaDescription)
                        @Html.TextBoxFor(model => model.MetaDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Status)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(model => model.Status)
                                Kích hoạt
                            </label>
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TopMost)
                        @Html.TextBoxFor(model => model.TopMost, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.TopMost, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu bài viết</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>

            }
        </div>
    </div>
</div>